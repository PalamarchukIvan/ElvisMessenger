<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/elvis_main_color"
    android:orientation="vertical"
    tools:context=".fragments.settings.EditProfileFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_settings_background">


            <RelativeLayout
                android:id="@+id/other_user_pfp_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/other_user_pfp_image"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/dornan" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/other_user_pfp_image"
                    android:background="@drawable/custom_edit_text">

                    <TextView
                        android:id="@+id/other_user_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_edit_text"
                        android:text="Online"
                        android:textColor="@color/elvis_text_variant_color"
                        android:textSize="18sp" />
                </RelativeLayout>

            </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="176dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text">

                        <TextView
                            android:id="@+id/other_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/custom_edit_text"
                            android:text="user_name"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/oth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/custom_edit_text">

                        <TextView
                            android:id="@+id/other_user_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/custom_edit_text"
                            android:text="Very very long about me test work test test test test test test test testestestststtstttttttttttttttttttttttttttttttttttttttttttttttttttt"
                            android:textColor="@color/elvis_text_color"
                            android:textSize="18sp" />

                    </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>